<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:elevation="7dp"

    app:cardCornerRadius="6dp"
    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"

        android:id="@+id/roomphoto"
        android:background="@drawable/room1">
        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="25dp"
            android:id="@+id/fav"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:background="@drawable/blackfade" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/strikeprice"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_above="@+id/originalprice"
            android:textColor="#FFFFFF"
            android:text="Strike Price"
            />


        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:textColor="#FFFFFF"
            android:id="@+id/originalprice"
            android:gravity="center"
            android:layout_alignParentBottom="true"

            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Price"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
android:layout_marginBottom="2sp"
            android:gravity="center"
            android:layout_toRightOf="@id/originalprice"
            android:id="@+id/offer"
            android:text="Offer"
            android:textColor="#FFB804"
            android:background="@drawable/blackrectangle"/>



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"

        android:layout_below="@id/roomphoto"
        android:id="@+id/hotelname"
        android:text="Hotel Name"
        android:textStyle="bold"
        />
    <TextView
    android:layout_width="match_parent"
        android:layout_marginStart="5dp"
    android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_below="@id/hotelname"
    android:id="@+id/hoteladdress"
    android:text="Hotel Address"
    />
    <TextView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_below="@id/hoteladdress"
        android:textColor="#FFFFFF"
        android:id="@+id/ratingdigit"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="4.9"
        android:background="@drawable/numberrectangle"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:id="@+id/ratingcomment"
        android:layout_toRightOf="@id/ratingdigit"
        android:layout_below="@id/hoteladdress"
        android:textColor="#3CD80D"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Very good"
        android:background="@drawable/commentrectangle"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
        android:id="@+id/noofratings"
        android:layout_toRightOf="@id/ratingcomment"
        android:layout_below="@id/hoteladdress"
        android:gravity="center"
        android:text="324 Ratings >"/>
</RelativeLayout></android.support.v7.widget.CardView>