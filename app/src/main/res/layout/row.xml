<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:elevation="7dp"

    app:cardCornerRadius="6dp"
    >


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:weightSum="11">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:id="@+id/roomphoto"
            android:background="@drawable/room1">

            <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="25dp"
                android:id="@+id/fav"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"

                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:background="@drawable/blackfade">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/strikeprice"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Strike Price"
                    />


                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textColor="#FFFFFF"
                        android:id="@+id/originalprice"
                        android:gravity="center"
                        android:layout_below="@id/strikeprice"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="Price"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_below="@id/strikeprice"
                        android:layout_toRightOf="@id/originalprice"
                        android:id="@+id/offer"
                        android:text="Offer"
                        android:textColor="#FFB804"
                        android:background="@drawable/blackrectangle"/>


            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/hotelname"
                android:text="Hotel Name"
                android:textStyle="bold"
                />        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/hoteladdress"
            android:text="Hotel Address"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ratinglayout"
            android:layout_height="0dp"
            android:paddingLeft="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:textColor="#FFFFFF"
                android:id="@+id/ratingdigit"
                android:textStyle="bold"
                android:textSize="15sp"
                android:gravity="center"
                android:text="4.9"
                android:background="@drawable/numberrectangle"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:id="@+id/ratingcomment"
                android:textColor="#3CD80D"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Very good"
                android:background="@drawable/commentrectangle"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:id="@+id/noofratings"
                android:gravity="center"
                android:text="324 Ratings >"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
